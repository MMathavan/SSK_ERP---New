@{
    ViewBag.Title = "Sales Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .si-main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }

    .si-content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .si-header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }

    .si-header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .si-table-container {
        padding: 30px;
        background: white;
    }

    #salesInvoiceTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    #salesInvoiceTable thead th {
        background: #7f88e9;
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255, 255, 255, 0.35);
    }

    #salesInvoiceTable thead th:last-child {
        border-right: none;
    }

    #salesInvoiceTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
        font-size: 13px;
    }

    #salesInvoiceTable tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }

    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }

    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }

    .btn-print {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        color: #ffffff;
    }

    .btn-print:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(24, 90, 157, 0.4);
        color: #ffffff;
    }

    .badge {
        font-weight: 600;
    }

    .badge.bg-success {
        background-color: #28a745;
        color: #ffffff !important;
        border: 1px solid #1e7e34;
    }

    .badge.bg-danger {
        background-color: #dc3545;
        color: #ffffff !important;
        border: 1px solid #b21f2d;
    }

    .dataTables_wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<div class="si-main-container">
    <div class="si-content-wrapper">
        <div class="si-header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="si-header-title">
                    <i class="fa fa-file-invoice"></i>
                    Sales Invoice
                </h1>
            </div>
        </div>

        <div class="si-table-container">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" id="toDate" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" id="filterBtn" class="btn btn-primary me-2">
                        <i class="fa fa-filter"></i> Filter
                    </button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Clear
                    </button>
                </div>
            </div>

            <table id="salesInvoiceTable" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Number</th>
                        <th>Ref No.</th>
                        <th>Customer Name</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // Default From/To Date to today (yyyy-MM-dd) on initial load
            (function setDefaultDatesToToday() {
                var today = new Date();
                var yyyy = today.getFullYear();
                var mm = String(today.getMonth() + 1).padStart(2, '0');
                var dd = String(today.getDate()).padStart(2, '0');
                var todayStr = yyyy + '-' + mm + '-' + dd;

                if (!$('#fromDate').val()) {
                    $('#fromDate').val(todayStr);
                }
                if (!$('#toDate').val()) {
                    $('#toDate').val(todayStr);
                }
            })();

            // SweetAlert notifications for success/error messages (after save/delete)
            var successMsg = "@(TempData["SuccessMessage"] ?? "")";
            if (successMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: successMsg,
                        confirmButtonText: 'OK'
                    });
                } else {
                    alert(successMsg);
                }
            }

            var errorMsg = "@(TempData["ErrorMessage"] ?? "")";
            if (errorMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: errorMsg,
                        confirmButtonText: 'OK'
                    });
                } else {
                    alert(errorMsg);
                }
            }
            $.fn.dataTable.ext.errMode = 'console';

            var table = $('#salesInvoiceTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAjaxData", "SalesInvoice")',
                    type: 'GET',
                    data: function (d) {
                        d.fromDate = $('#fromDate').val();
                        d.toDate = $('#toDate').val();
                    },
                    error: function (xhr, status, err) {
                        if (status === 'abort') {
                            return;
                        }
                        console.error('SalesInvoice GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load Sales Invoices. Please check console for details.');
                    }
                },
                columns: [
                    {
                        data: 'TRANDATE',
                        render: function (data, type, row) {
                            if (data && type === 'display') {
                                var date;
                                if (typeof data === 'string' && data.indexOf('/Date(') === 0) {
                                    var timestamp = parseInt(data.substr(6));
                                    date = new Date(timestamp);
                                } else {
                                    date = new Date(data);
                                }

                                if (!isNaN(date.getTime())) {
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0');
                                    var year = date.getFullYear();
                                    return day + '/' + month + '/' + year;
                                }
                            }
                            return data;
                        }
                    },
                    { data: 'TRANDNO' },
                    { data: 'TRANREFNO' },
                    { data: 'CustomerName' },
                    {
                        data: 'Amount',
                        render: function (data) {
                            var value = parseFloat(data || 0);
                            return '<span class="amount-cell">&#8377; ' + value.toFixed(2) + '</span>';
                        }
                    },
                    {
                        data: 'Status',
                        render: function (data) {
                            var text = data || 'N/A';
                            var cls = text === 'Enabled' ? 'badge bg-success' : 'badge bg-danger';
                            return '<span class="' + cls + '">' + text + '</span>';
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {
                            var id = row['TRANMID'];
                            var editUrl = '@Url.Action("Form", "SalesInvoice")' + '?id=' + id;
                            var printUrl = '@Url.Action("Print", "SalesInvoice")' + '?id=' + id;

                            var html = '';
                            html += '<a href="' + editUrl + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>';
                            html += '<a href="' + printUrl + '" class="btn btn-action btn-print" target="_blank"><i class="fa fa-print"></i> Print</a>';
                            html += '<button type="button" class="btn btn-action btn-delete" onclick="deleteSalesInvoice(' + id + ');"><i class="fa fa-trash"></i> Delete</button>';
                            return html;
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            $('#filterBtn').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

                if (fromDate && toDate && fromDate > toDate) {
                    alert('From Date cannot be greater than To Date');
                    return;
                }

                table.ajax.reload();
            });

            $('#clearBtn').on('click', function () {
                $('#fromDate').val('');
                $('#toDate').val('');
                table.ajax.reload();
            });
        });

        function deleteSalesInvoice(id) {
            if (!confirm('Are you sure you want to delete this invoice?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("DeleteInvoice", "SalesInvoice")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response && response.success) {
                        alert(response.message || 'Invoice deleted successfully.');
                        $('#salesInvoiceTable').DataTable().ajax.reload();
                    } else {
                        alert((response && response.message) || 'Failed to delete invoice.');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error deleting invoice:', error, xhr && xhr.responseText);
                    alert('Failed to delete invoice. Please try again.');
                }
            });
        }
    </script>
}
