@model SSK_ERP.Controllers.Purchase.PurchaseInvoiceController.PurchaseInvoicePrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Invoice - @Model.TRANDNO</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            background: #f5f5f5;
        }

        .pi-print-container {
            max-width: 900px;
            margin: 0 auto;
            background: #ffffff;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .pi-print-header {
            text-align: center;
            border-bottom: 3px solid #185a9d;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .pi-print-header h1 {
            color: #185a9d;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .pi-print-header h2 {
            color: #555;
            font-size: 16px;
            font-weight: normal;
        }

        .pi-print-company {
            text-align: center;
            font-size: 12px;
            line-height: 1.4;
            margin-top: 0;
            margin-bottom: 6px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            white-space: pre-wrap;
            font-weight: 600;
        }

        .pi-print-info {
            margin-bottom: 20px;
        }

        .pi-print-info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 6px;
            font-size: 14px;
        }

        .pi-print-address-row > div:first-child {
            flex: 0 0 60%;
            max-width: 60%;
        }

        .pi-print-address-row > div:last-child {
            flex: 0 0 40%;
            max-width: 40%;
            text-align: right;
        }

        .pi-print-info-label {
            font-weight: 600;
            min-width: 110px;
            color: #555;
        }

        .pi-print-info-value {
            color: #333;
        }

        .pi-print-section-title {
            font-size: 15px;
            font-weight: 600;
            margin: 16px 0 8px 0;
            color: #185a9d;
            border-bottom: 2px solid #43cea2;
            padding-bottom: 4px;
        }

        .pi-print-items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .pi-print-items-table thead {
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: #ffffff;
        }

        .pi-print-items-table th,
        .pi-print-items-table td {
            padding: 8px;
            font-size: 12px;
            border-bottom: 1px solid #e0e0e0;
        }

        .pi-print-items-table th {
            text-align: left;
            font-weight: 600;
        }

        .pi-print-items-table th.text-right,
        .pi-print-items-table td.text-right {
            text-align: right;
        }

        .pi-print-items-table th.text-center,
        .pi-print-items-table td.text-center {
            text-align: center;
        }

        .pi-print-summary {
            width: 100%;
            max-width: 380px;
            margin-left: auto;
            margin-top: 10px;
            border: 2px solid #185a9d;
            border-radius: 8px;
            overflow: hidden;
        }

        .pi-print-summary-row {
            display: flex;
            justify-content: space-between;
            padding: 6px 14px;
            border-bottom: 1px solid #ddd;
            font-size: 13px;
        }

        .pi-print-summary-row:last-child {
            border-bottom: none;
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: #ffffff;
            font-weight: 700;
            font-size: 15px;
        }

        .pi-print-summary-label {
            font-weight: 600;
        }

        .pi-print-amount-words {
            margin-top: 16px;
            font-size: 13px;
            font-style: italic;
            color: #555;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }

        .pi-print-footer {
            margin-top: 40px;
            padding-top: 18px;
            border-top: 1px solid #ddd;
            text-align: center;
            font-size: 11px;
            color: #777;
        }

        .pi-print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background: linear-gradient(135deg, #43cea2, #185a9d);
            color: #ffffff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(24, 90, 157, 0.3);
        }

        .pi-print-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(24, 90, 157, 0.4);
        }

        @@media print {
            body {
                background: #ffffff;
                padding: 0;
            }

            .pi-print-container {
                box-shadow: none;
                padding: 20px;
            }

            .pi-print-button {
                display: none;
            }

            @@page {
                margin: 1cm;
            }
        }
    </style>
</head>
<body>
    <button class="pi-print-button" onclick="window.print();">
        <i class="fa fa-print"></i> Print
    </button>

    <div class="pi-print-container">
        <div class="pi-print-header">
            <div class="pi-print-company">SSK ENTERPRISE
@Model.CompanyAddress</div>
            <h1>Purchase Invoice</h1>
            <h2>Ref No: @Model.TRANDNO</h2>
        </div>

        <div class="pi-print-info">
            <div class="pi-print-info-row">
                <div>
                    <span class="pi-print-info-label">Invoice No:</span>
                    <span class="pi-print-info-value">@Model.TRANDNO</span>
                </div>
                <div>
                    <span class="pi-print-info-label">Date:</span>
                    <span class="pi-print-info-value">@Model.TRANDATE.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.PONumber) && Model.PONumber != "-")
            {
            <div class="pi-print-info-row">
                <div>
                    <span class="pi-print-info-label">PO Ref:</span>
                    <span class="pi-print-info-value">@Model.PONumber</span>
                </div>
            </div>
            }

            <div class="pi-print-section-title">Supplier Details</div>
            <div class="pi-print-info-row">
                <!-- Left Side: Name, Address, GST -->
                <div style="flex: 0 0 70%; max-width: 70%;">
                     <div style="margin-bottom: 6px;">
                        <span class="pi-print-info-label">Name:</span>
                        <span class="pi-print-info-value">@Model.SupplierName</span>
                     </div>
                     <div style="margin-bottom: 6px;">
                        <span class="pi-print-info-label">Address:</span>
                        <span class="pi-print-info-value">
                            @Model.Address1<br />
                            @if (!string.IsNullOrWhiteSpace(Model.Address2))
                            {
                                @Model.Address2<br />
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Address3))
                            {
                                @Model.Address3<br />
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Address4))
                            {
                                @Model.Address4
                            }
                        </span>
                     </div>
                     <div>
                        <span class="pi-print-info-label">GST No:</span>
                        <span class="pi-print-info-value">@Model.GstNo</span>
                     </div>
                </div>

                <!-- Right Side: Code, State -->
                <div style="flex: 0 0 30%; max-width: 30%; text-align: right;">
                     <div style="margin-bottom: 6px;">
                        <span class="pi-print-info-label" style="min-width: auto; margin-right: 5px;">Code:</span>
                        <span class="pi-print-info-value">@Model.SupplierCode</span>
                     </div>
                     <div>
                        <span class="pi-print-info-label" style="min-width: auto; margin-right: 5px;">State:</span>
                        <span class="pi-print-info-value">@Model.State (@Model.StateCode)</span>
                     </div>
                </div>
            </div>
        </div>

        <div class="pi-print-section-title">Invoice Items</div>
        <table class="pi-print-items-table">
            <thead>
                <tr>
                    <th style="width:5%;" class="text-center">S.No</th>
                    <th style="width:30%;">Item</th>
                    <th style="width:10%;">HSN</th>
                    <th style="width:10%;">Batch</th>
                    <th style="width:10%;">Expiry</th>
                    <th style="width:8%;" class="text-right">Qty</th>
                    <th style="width:10%;" class="text-right">Rate</th>
                    <th style="width:7%;" class="text-right">MRP</th>
                    <th style="width:10%;" class="text-right">Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    var index = 1;
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center">@index</td>
                            <td>@item.MaterialName</td>
                            <td>@item.HSNCode</td>
                            <td>@item.BatchNo</td>
                            <td>@(item.ExpiryDate.HasValue ? item.ExpiryDate.Value.ToString("MM'/'yy") : "/")</td>
                            <td class="text-right">@item.Qty.ToString("0.##")</td>
                            <td class="text-right">@item.Rate.ToString("N2")</td>
                            <td class="text-right">@item.Mrp.ToString("N2")</td>
                            <td class="text-right">@item.Amount.ToString("N2")</td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No items available.</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pi-print-summary">
            <div class="pi-print-summary-row">
                <span class="pi-print-summary-label">Gross Amount</span>
                <span class="pi-print-summary-value">@Model.GrossAmount.ToString("N2")</span>
            </div>
            
            @if (Model.CGSTAmount > 0)
            {
                <div class="pi-print-summary-row">
                    <span class="pi-print-summary-label">CGST</span>
                    <span class="pi-print-summary-value">@Model.CGSTAmount.ToString("N2")</span>
                </div>
            }
            @if (Model.SGSTAmount > 0)
            {
                <div class="pi-print-summary-row">
                    <span class="pi-print-summary-label">SGST</span>
                    <span class="pi-print-summary-value">@Model.SGSTAmount.ToString("N2")</span>
                </div>
            }
            @if (Model.IGSTAmount > 0)
            {
                <div class="pi-print-summary-row">
                    <span class="pi-print-summary-label">IGST</span>
                    <span class="pi-print-summary-value">@Model.IGSTAmount.ToString("N2")</span>
                </div>
            }

            <div class="pi-print-summary-row">
                <span class="pi-print-summary-label">Net Amount</span>
                <span class="pi-print-summary-value">@Model.NetAmount.ToString("N2")</span>
            </div>
        </div>

        <div class="pi-print-amount-words">
            <strong>Amount in Words:</strong> @Model.AmountInWords
        </div>
        


        <div class="pi-print-footer">
            <p>This is a computer-generated Purchase Invoice and does not require a signature.</p>
            <p>Printed on: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</body>
</html>
