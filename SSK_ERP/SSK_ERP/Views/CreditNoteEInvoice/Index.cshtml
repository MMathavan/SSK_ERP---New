@{
    ViewBag.Title = "Credit Note EInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .si-main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }

    .si-content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .si-header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }

    .si-header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .si-table-container {
        padding: 30px;
        background: white;
    }

    #creditNoteEInvoiceTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    #creditNoteEInvoiceTable thead th {
        background: #7f88e9;
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255, 255, 255, 0.35);
    }

    #creditNoteEInvoiceTable thead th:last-child {
        border-right: none;
    }

    #creditNoteEInvoiceTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
        font-size: 13px;
    }

    #creditNoteEInvoiceTable tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }

    .amount-cell {
        font-weight: 600;
        color: #2d3436;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        margin: 2px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-upload {
        background: #17a2b8;
        color: white;
        border: none;
    }

    .btn-upload:hover {
        background: #138496;
        color: white;
        transform: translateY(-1px);
    }

    .btn-print {
        background: #28a745;
        color: white;
        border: none;
    }

    .btn-print:hover {
        background: #218838;
        color: white;
        transform: translateY(-1px);
    }
</style>

<div class="si-main-container">
    <div class="si-content-wrapper">
        <div class="si-header-section">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="si-header-title">
                        <i class="fa fa-file-invoice"></i>
                        Credit Note EInvoice
                    </h1>
                </div>
            </div>
        </div>

        <div class="si-table-container">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" id="toDate" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" id="filterBtn" class="btn btn-primary me-2">
                        <i class="fa fa-filter"></i> Filter
                    </button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Clear
                    </button>
                </div>
            </div>

            <table id="creditNoteEInvoiceTable" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Number</th>
                        <th>Ref No.</th>
                        <th>Customer Name</th>
                        <th>Amount</th>
                        <th>Acknowledge Number</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            (function setDefaultDatesToToday() {
                var today = new Date();
                var yyyy = today.getFullYear();
                var mm = String(today.getMonth() + 1).padStart(2, '0');
                var dd = String(today.getDate()).padStart(2, '0');
                var todayStr = yyyy + '-' + mm + '-' + dd;

                if (!$('#fromDate').val()) {
                    $('#fromDate').val(todayStr);
                }
                if (!$('#toDate').val()) {
                    $('#toDate').val(todayStr);
                }
            })();

            var successMsg = "@(TempData["SuccessMessage"] ?? "")";
            if (successMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: successMsg,
                        confirmButtonText: 'OK'
                    });
                } else {
                    alert(successMsg);
                }
            }

            var errorMsg = "@(TempData["ErrorMessage"] ?? "")";
            if (errorMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: errorMsg,
                        confirmButtonText: 'OK'
                    });
                } else {
                    alert(errorMsg);
                }
            }

            $.fn.dataTable.ext.errMode = 'console';

            var canUpload = @(User.IsInRole("CreditNoteEInvoiceUpload") ? "true" : "false");
            var canPrint = @(User.IsInRole("CreditNoteEInvoicePrint") ? "true" : "false");

            var table = $('#creditNoteEInvoiceTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAjaxData", "CreditNoteEInvoice")',
                    type: 'GET',
                    data: function (d) {
                        d.fromDate = $('#fromDate').val();
                        d.toDate = $('#toDate').val();
                    },
                    error: function (xhr, status, err) {
                        if (status === 'abort') {
                            return;
                        }
                        console.error('CreditNoteEInvoice GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load Credit Note EInvoices. Please check console for details.');
                    }
                },
                columns: [
                    {
                        data: 'TRANDATE',
                        render: function (data, type, row) {
                            if (data && type === 'display') {
                                var date;
                                if (typeof data === 'string' && data.indexOf('/Date(') === 0) {
                                    var timestamp = parseInt(data.substr(6));
                                    date = new Date(timestamp);
                                } else {
                                    date = new Date(data);
                                }

                                if (!isNaN(date.getTime())) {
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0');
                                    var year = date.getFullYear();
                                    return day + '/' + month + '/' + year;
                                }
                            }
                            return data;
                        }
                    },
                    { data: 'TRANDNO' },
                    { data: 'TRANREFNO' },
                    { data: 'CustomerName' },
                    {
                        data: 'Amount',
                        render: function (data) {
                            var value = parseFloat(data || 0);
                            return '<span class="amount-cell">&#8377; ' + value.toFixed(2) + '</span>';
                        }
                    },
                    { data: 'AckNo' },
                    {
                        data: 'Status',
                        render: function (data) {
                            var text = data || 'N/A';
                            var cls = text === 'Enabled' ? 'badge bg-success' : 'badge bg-danger';
                            return '<span class="' + cls + '">' + text + '</span>';
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {
                            var id = row['TRANMID'];
                            var uploadUrl = '@Url.Action("Upload", "CreditNoteEInvoice")' + '?id=' + id;
                            var printUrl = '@Url.Action("Print", "CreditNoteEInvoice")' + '?id=' + id;

                            var html = '';
                            if (canUpload) {
                                html += '<a href="' + uploadUrl + '" class="btn btn-action btn-upload"><i class="fa fa-upload"></i> Upload</a>';
                            }
                            if (canPrint) {
                                html += '<a href="' + printUrl + '" class="btn btn-action btn-print" target="_blank"><i class="fa fa-print"></i> Print</a>';
                            }
                            return html;
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            $('#filterBtn').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

                if (fromDate && toDate && fromDate > toDate) {
                    alert('From Date cannot be greater than To Date');
                    return;
                }

                table.ajax.reload();
            });

            $('#clearBtn').on('click', function () {
                $('#fromDate').val('');
                $('#toDate').val('');
                table.ajax.reload();
            });
        });
    </script>
}
