@{
    ViewBag.Title = "Sales Return";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .sr-main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }

    .sr-content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .sr-header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }

    .sr-header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .sr-add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }

    .sr-add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
    }

    .sr-table-container {
        padding: 30px;
        background: white;
    }

    #salesReturnTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    #salesReturnTable thead th {
        background: #7f88e9;
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255, 255, 255, 0.35);
    }

    #salesReturnTable thead th:last-child {
        border-right: none;
    }

    #salesReturnTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
        font-size: 13px;
    }

    #salesReturnTable tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }

    .sr-amount-cell {
        font-weight: 700;
        color: #dc3545;
    }

    .sr-status-badge {
        padding: 4px 10px;
        font-size: 12px;
        font-weight: 600;
        border-radius: 4px;
        display: inline-block;
        min-width: 90px;
        text-align: center;
        color: #ffffff;
    }

    .dataTables_wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dataTables_filter.with-filter-status {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .dataTables_filter.with-filter-status #filterStatus {
        margin-bottom: 4px;
    }

    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }

    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }

    .btn-print {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        color: #ffffff;
    }

    .btn-print:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(24, 90, 157, 0.4);
        color: #ffffff;
    }

    .badge {
        font-weight: 600;
    }

    .badge.bg-success {
        background-color: #28a745;
        color: #ffffff !important;
        border: 1px solid #1e7e34;
    }

    .badge.bg-danger {
        background-color: #dc3545;
        color: #ffffff !important;
        border: 1px solid #b21f2d;
    }
</style>

<div class="sr-main-container">
    <div class="sr-content-wrapper">
        <div class="sr-header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="sr-header-title">
                    <i class="fa fa-undo"></i>
                    Sales Return
                </h1>
                <div class="btn-group">
                    <button type="button" class="btn sr-add-btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-plus-circle"></i> Add Sales Return
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Form", "SalesReturn", new { tranBType = 1 })">
                                From Sales Invoice
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Direct", "CreateDirectSalesReturn")">
                                Direct
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="sr-table-container">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" id="toDate" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" id="filterBtn" class="btn btn-primary me-2">
                        <i class="fa fa-filter"></i> Filter
                    </button>
                    <button type="button" id="clearBtn" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Clear
                    </button>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <div id="filterStatus" style="display:none;">
                        <small class="text-muted"><span id="filterText"></span></small>
                    </div>
                </div>
            </div>

            <table id="salesReturnTable" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Number</th>
                        <th>Ref No.</th>
                        <th>Customer Name</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var errorMsg = "@(TempData["ErrorMessage"] ?? "")";
            if (errorMsg) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorMsg,
                    confirmButtonText: 'OK'
                });
            }

            $.fn.dataTable.ext.errMode = 'console';

            var table = $('#salesReturnTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAjaxData", "SalesReturn")',
                    type: 'GET',
                    data: function (d) {
                        d.fromDate = $('#fromDate').val();
                        d.toDate = $('#toDate').val();
                    },
                    dataSrc: function (json) {
                        if (json && Array.isArray(json.data)) return json.data;
                        if (json && Array.isArray(json.aaData)) return json.aaData;
                        if (Array.isArray(json)) return json;
                        if (json && json.error) {
                            console.error('Server error while loading Sales Returns:', json.error);
                            return [];
                        }
                        return [];
                    },
                    error: function (xhr, status, err) {
                        if (status === 'abort') {
                            return;
                        }
                        console.error('SalesReturn GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load Sales Returns. Please check console for details.');
                    }
                },
                columns: [
                    {
                        data: 'TRANDATE',
                        render: function (data, type, row) {
                            if (data && type === 'display') {
                                var date;
                                if (typeof data === 'string' && data.indexOf('/Date(') === 0) {
                                    var timestamp = parseInt(data.substr(6));
                                    date = new Date(timestamp);
                                } else {
                                    date = new Date(data);
                                }
                                if (!isNaN(date.getTime())) {
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0');
                                    var year = date.getFullYear();
                                    return day + '/' + month + '/' + year;
                                }
                            }
                            return data;
                        }
                    },
                    { data: 'TRANDNO' },
                    { data: 'TRANREFNO' },
                    { data: 'CustomerName', className: 'text-start' },
                    {
                        data: 'Amount',
                        render: function (data) {
                            var value = parseFloat(data || 0);
                            return '<span class="sr-amount-cell">&#8377; ' + value.toFixed(2) + '</span>';
                        }
                    },
                    {
                        data: 'StatusDescription',
                        render: function (data) {
                            var val = data;
                            var text = 'N/A';
                            if (val == '0' || val === 0) text = 'Enabled';
                            else if (val == '1' || val === 1) text = 'Disabled';
                            else if (data && data.length > 1) text = data;

                            var cls = text === 'Enabled' ? 'badge bg-success' : 'badge bg-danger';
                            return '<span class="' + cls + '">' + text + '</span>';
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {
                            var id = row['TRANMID'];
                            var tranBType = row['TranBType'];
                            var editUrl;

                            if (tranBType == 0 || tranBType === '0') {
                                editUrl = '@Url.Action("Direct", "CreateDirectSalesReturn")' + '?id=' + id;
                            } else {
                                editUrl = '@Url.Action("Form", "SalesReturn")' + '?id=' + id;
                            }
                            var printUrl = '@Url.Action("Print", "SalesReturn")' + '?id=' + id;

                            var html = '';
                            html += '<a href="' + editUrl + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>';
                            html += '<a href="' + printUrl + '" class="btn btn-action btn-print" target="_blank"><i class="fa fa-print"></i> Print</a>';
                            html += '<button type="button" class="btn btn-action btn-delete" onclick="deleteSalesReturn(' + id + ');"><i class="fa fa-trash"></i> Delete</button>';
                            return html;
                        }
                    }
                ],
                order: [[0, 'desc']],
                pageLength: 25,
                responsive: true,
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            function updateFilterStatus() {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var statusDiv = $('#filterStatus');
                var textSpan = $('#filterText');

                if (fromDate || toDate) {
                    var filterText = 'Filtered: ';
                    if (fromDate && toDate) {
                        filterText += fromDate + ' to ' + toDate;
                    } else if (fromDate) {
                        filterText += 'From ' + fromDate;
                    } else if (toDate) {
                        filterText += 'Until ' + toDate;
                    }
                    textSpan.text(filterText);
                    statusDiv.show();
                } else {
                    statusDiv.hide();
                }
            }

            $('#filterBtn').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

                if (fromDate && toDate && fromDate > toDate) {
                    alert('From Date cannot be greater than To Date');
                    return;
                }

                var $btn = $(this);
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Filtering...');
                $btn.prop('disabled', true);

                table.ajax.reload(function () {
                    $btn.html('<i class="fa fa-filter"></i> Filter');
                    $btn.prop('disabled', false);
                    updateFilterStatus();
                });
            });

            $('#clearBtn').on('click', function () {
                $('#fromDate').val('');
                $('#toDate').val('');
                updateFilterStatus();

                var $btn = $(this);
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Clearing...');
                $btn.prop('disabled', true);

                table.ajax.reload(function () {
                    $btn.html('<i class="fa fa-times"></i> Clear');
                    $btn.prop('disabled', false);
                });
            });

            $('#fromDate, #toDate').on('keypress', function (e) {
                if (e.which === 13) {
                    $('#filterBtn').click();
                }
            });

            var today = new Date();
            var todayStr = today.toISOString().split('T')[0];
            $('#fromDate').val(todayStr);
            $('#toDate').val(todayStr);

            var srFilterWrapper = $('#salesReturnTable').closest('.dataTables_wrapper').find('.dataTables_filter');
            if (srFilterWrapper.length) {
                var srFilterStatus = $('#filterStatus');
                srFilterWrapper.prepend(srFilterStatus);
                srFilterWrapper.addClass('with-filter-status');
            }

            updateFilterStatus();
            table.ajax.reload();
        });

        function deleteSalesReturn(id) {
            if (!confirm('Are you sure you want to delete this Sales Return?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("Del", "SalesReturn")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (typeof response === 'string') {
                        alert(response);
                    } else if (response && response.message) {
                        alert(response.message);
                    }
                    $('#salesReturnTable').DataTable().ajax.reload();
                },
                error: function (xhr, status, error) {
                    console.error('Error deleting Sales Return:', error, xhr && xhr.responseText);
                    alert('Failed to delete Sales Return. Please try again.');
                }
            });
        }
    </script>
}
